#lang r6rs

(library
 (sorting)
 (export sort)
 (import (except (rnrs base (6)) length)
         (a-d heap standard))
 
 (define (heapsort vector <<?)
   (define >>? (lambda (x y) (not (<<? x y))))
   (define heap (from-scheme-vector vector >>?))
   (define (extract idx)
     (vector-set! vector idx (delete! heap))
     (if (> idx 0)
       (extract (- idx 1))))
   (extract (- (vector-length vector) 1)))
 
 (define sort heapsort))