(library
 (file-with-varying-runs)
 (export delete! make file file! sentinel name)
 (import (rnrs base)
         (srfi :9)
         (prefix (a-d file sequential sequential-file) seq:))
 
 (define-record-type file-with-runs
   (make f s)
   file-with-runs?
   (f file file!)
   (s sentinel))
 
 (define (delete! fwrs)
   (seq:delete! (file fwrs)))
 
 (define (name fwrs)
   (seq:name (file fwrs))))