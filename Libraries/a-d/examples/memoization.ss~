(import (rnrs base (6)))

(define (fib n)
  (define fib-tab (make-vector (+ n 1) #f))
  (define (fib-rec n)
    (if (not (vector-ref fib-tab n))
      (vector-set! fib-tab n (+ (fib-rec (- n 1))
                                (fib-rec (- n 2)))))
    (vector-ref fib-tab n))
  (vector-set! fib-tab 0 1)
  (vector-set! fib-tab 1 1)
  (fib-rec n))