(import (rnrs base)
        (rnrs io simple)
        (rnrs control)
        (a-d examples goto))

(define (threesome)
  (define input 0)
  (define loop (label))
  (display "Tick 1 ")
  (display input)
  (newline)
  (set! input (+ input 1))
  (display "Tick 2 ")
  (display input)
  (newline)
  (set! input (+ input 1))
  (display "Tick 3 ")
  (display input)
  (newline)
  (set! input (+ input 1))
  (goto loop))